    <EditText

        android:id="@+id/name_sign_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:nextFocusDown="@id/email_sign_up"
        android:layout_marginRight="16dp"
        android:background="@drawable/editback"
        android:focusable="true"
        android:hint="Name"
        android:padding="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/lightDarkBlack"
        android:textColorHint="@color/tab_indicator_gray"
        />


    <EditText

        android:id="@+id/email_sign_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:nextFocusDown="@id/password_sign_up"
        android:layout_marginRight="16dp"
        android:background="@drawable/editback"
        android:focusable="true"
        android:hint="Email"
        android:padding="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/lightDarkBlack"
        android:textColorHint="@color/tab_indicator_gray"
        />



    <EditText
        android:id="@+id/password_sign_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/editback"
        android:hint="Password"
        android:nextFocusDown="@id/confirm_password_sign_up"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textPassword"

        android:padding="8dp"
        android:textColor="@color/lightDarkBlack"
        android:textColorHint="@color/tab_indicator_gray"
        />


    <EditText
        android:id="@+id/confirm_password_sign_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/editback"
        android:hint="Confirm Password"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="textPassword"

        android:padding="8dp"
        android:textColor="@color/lightDarkBlack"
        android:textColorHint="@color/tab_indicator_gray"
        />
    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/btn_gradient_style"
        android:clickable="true"

        android:gravity="center"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Sign up"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_enter_as_guest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/btn_gradient_style"
        android:clickable="true"

        android:gravity="center"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Enter As guest"
        android:textColor="@android:color/white"
        android:textSize="16sp" />





</LinearLayout>



